<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DialogTheme" parent="Base.Theme.SimpleMoneyManager">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="TextAppearance.Material3.TitleLarge.MyApp" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.Material3.TitleMedium.MyApp" parent="TextAppearance.Material3.TitleMedium">
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.Income" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleMedium.MyApp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.SmallComponent.MyApp</item>
        <item name="android:textColor">@color/income_text_foreground_color_selector</item>
        <item name="backgroundTint">@color/income_button_background_color_selector</item>
        <item name="strokeColor">@color/md_theme_dark_surfaceVariant</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.Expense" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleMedium.MyApp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.SmallComponent.MyApp</item>
        <item name="android:textColor">@color/expense_text_foreground_color_selector</item>
        <item name="backgroundTint">@color/expense_button_background_color_selector</item>
        <item name="strokeColor">@color/md_theme_dark_surfaceVariant</item>
    </style>

    <style name="ShapeAppearance.Material3.SmallComponent.MyApp" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">20dp</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">42sp</item>
    </style>

    <style name="Category_account_button" parent="Widget.Material3.Button.OutlinedButton.Icon">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="strokeColor">@color/md_theme_dark_stroke</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Widget.MyApp.TextInputLayout.FilledBox" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="android:textSize">42sp</item>
        <item name="hintEnabled">false</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeColor">@color/text_input_layout_container_color_selector</item>
        <item name="errorEnabled">true</item>
        <item name="prefixTextAppearance">@style/TextLabel</item>
    </style>

    <style name="Color_chip" parent="Widget.Material3.Chip.Filter">
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Large</item>
        <item name="chipIconEnabled">false</item>
    </style>
</resources>